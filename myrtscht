#!/usr/bin/perl

use warnings;
use strict;
use Log::Log4perl qw/ :easy /;
use Cwd;
use File::Copy;
use File::Spec;
use Getopt::Std;
use Getopt::Long qw/ :config no_ignore_case /;
use Games::Tournament::RoundRobin;
use Net::CUPS::Destination;
use File::Temp;

# set up the boolean options and these with non-optional values
our %Options;
getopts('g:b:r:psa',\%Options);

# set up the options with optional values
GetOptions(
        'n:s' => \$Options{n},
        'd:s' => \$Options{d},
        'o:s' => \$Options{o},
        'P:s' => \$Options{P},
);

my $Cwd = getcwd() or die "Couldn't get the current working directory: $!\n";

# initialize the logger or not
if (defined $Options{d}) {
    my $logfile =
        $Options{d} ?
        File::Spec->catfile($Cwd, $Options{d}) :
        File::Spec->catfile($Cwd, "debug.log");
    Log::Log4perl->init($logfile);
}
